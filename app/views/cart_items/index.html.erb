<h1>Cart</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% total = 0 %>
    <% @items.each do |item| %>
      <% if item.user == current_user && item.quantity>0 %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= item.quantity %></td>
          <td><%= item.price %></td>
          <td><a href="/shops/<%= item.user_id %>/<%= item.item_id %>">Show</a></td>
          <td><%= link_to 'Edit', edit_cart_item_path(item) %></td>
          <td><%= link_to 'Destroy', cart_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td>
            <% if item.quantity > item.available %>
              <p style="color: red">Available = <%= item.available %></p>
            <% end %>
          </td>
        </tr>
        <% total += item.price %>
      <% end %>
    <% end %>
    <tr>
        <td colspan="3">Total</td>
        <td><%= total %></td>
        <td></td>
    </tr>
  </tbody>
</table>

<br/>
<%= link_to 'Checkout', checkout_order_path %>