<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>

<% (0...@item.images.count).each do |image| %>
  <%= image_tag(@item.thumbnail(image)) %>
<% end %>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @item.price %>
</p>

<%= link_to "Add to Cart", add_cart_item_path(:id=>@item) %>