<h1>Orders</h1>
<br>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
      <th scope="col">Status</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <th scope="row"><a href="/shops/<%= order.user_id %>/<%= order.item_id %>"><%= order.name %></a></th>
        <td><%= order.description %></td>
        <td><%= order.quantity %></td>
        <td><%= order.price %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Cancel', order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>