<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Status</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <% if order.user == current_user %>
        <tr>
          <td><%= order.name %></td>
          <td><%= order.description %></td>
          <td><%= order.quantity %></td>
          <td><%= order.price %></td>
          <td><%= order.status %></td>
          <td><a href="/shops/<%= order.user_id %>/<%= order.item_id %>">Show</a></td>
          <td><%= link_to 'Cancel', order_path(order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>