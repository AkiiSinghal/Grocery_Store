<!DOCTYPE html>
<html>
  <head>
    <title>GroceryStore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/alerts' %>
    <%= link_to 'Home', root_url %>
    <% if user_signed_in? %>
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class:"nav-link" %>
    <%= link_to 'Edit Profile', edit_user_registration_path, class:"nav-link" %>
    <% usertype = current_user.user_type %>
    <% if usertype == "Vendor" %>
        <%= link_to 'Items', items_path ,class:"nav-link"%>
        <%= link_to 'Add Item', new_item_path ,class:"nav-link"%>
    <% end %>
    <% if usertype == "Customer" && current_user.admin !=true %>
        <%= link_to 'Cart', cart_items_path,class:"nav-link" %>
        <%= link_to 'Orders', orders_path ,class:"nav-link"%>
    <% end %>
<% else %>
    <%= link_to 'Sign Up', new_user_registration_path, class:"nav-link" %>
    <%= link_to 'Sign In', new_user_session_path, class:"nav-link" %>
<% end %>
    
    <%= yield %>
  </body>
</html>
